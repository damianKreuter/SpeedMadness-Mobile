<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputDirDesde"
        android:layout_width="351dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:hint="Desde"
        android:textColorHint="@color/colorPrincipal"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLayout_input_layout_dirDesde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrincipal"
            android:textColorLink="@color/colorPrincipal"
            android:transitionName="@string/share_pedido_detalle_titulo"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputDirHasta"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:hint="Descripcion pedido"
        android:textColorHint="@color/colorPrincipal"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/TextInputDirDesde"
        app:layout_constraintTop_toBottomOf="@+id/TextInputDirDesde">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLayout_input_layout_dirHasta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrincipal"
            android:textColorLink="@color/colorPrincipal"
            android:transitionName="@string/share_pedido_detalle_titulo"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonPedidoSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        android:text="Agregar item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>